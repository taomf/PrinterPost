<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/textView"
            android:id="@+id/iv_back" />
        <TextView
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单查询"
            android:textColor="@color/c_000000"
            android:id="@+id/textView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫"
            android:textSize="18sp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_scan_print" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/horizontal_line"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        >

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_range_ac_login"
            android:id="@+id/relativeLayout">
            <EditText
                android:id="@+id/et_ordersearch_id"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请你输入订单编号进行查询"
                android:textColor="@color/c_b1b1b1"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:id="@+id/at_order_search_iv"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_search"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                />

            <ImageView
                android:layout_width="0.8dp"
                android:layout_height="17dp"
                android:background="@drawable/vertical_line"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/at_order_search_iv"
                android:layout_toStartOf="@+id/at_order_search_iv" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_range_ac_login"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout"
            android:id="@+id/relativeLayout2">
            <EditText
                android:id="@+id/et_ordersearch_acc"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请你输下单帐号进行查询"
                android:textColor="@color/c_b1b1b1"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:id="@+id/at_order_search_iv_acc"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_search"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                />

            <ImageView
                android:layout_width="0.8dp"
                android:layout_height="17dp"
                android:background="@drawable/vertical_line"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/at_order_search_iv_acc"
                android:layout_toStartOf="@+id/at_order_search_iv_acc"
                android:id="@+id/imageView" />


        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:src="@drawable/activity_order_search_slide"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:id="@+id/slide_detail_search" />
        <ImageView
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="0.8dp"
            android:layout_height="30dp"
            android:background="@drawable/vertical_line"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@+id/slide_detail_search"
            android:layout_toStartOf="@+id/slide_detail_search" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/horizontal_line"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_search_lv"
        ></ListView>

</LinearLayout>