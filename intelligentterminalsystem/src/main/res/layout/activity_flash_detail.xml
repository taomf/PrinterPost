<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/textView"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_back"
                    android:id="@+id/iv_back" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="订单详情"
                    android:textColor="@color/c_000000"
                    android:textSize="18sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="订单信息 :"
                    android:textColor="@color/c_000000"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号:   "
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:id="@+id/tv_order_num"
                        android:layout_width="250dp"
                        android:text=""
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    订单状态 :  "
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:id="@+id/tv_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/c_404040" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址:   "
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:text=""
                        android:id="@+id/tv_receiver_address"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货人手机号 :  "
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:id="@+id/tv_receiver_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/c_404040" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单时间:   "
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单账号 :  "
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:id="@+id/tv_order_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/c_404040" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式:   "
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:id="@+id/tv_pay_method"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单商超 :  "
                        android:textColor="@color/c_404040" />

                    <TextView
                        android:id="@+id/tv_market_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/c_404040" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/horizontal_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="商品信息 :"
                android:textColor="@color/c_000000"
                android:textSize="13sp" />

            <cn.speedpay.s.xedj.view.GridViewForScrollView
                android:numColumns="2"
                android:layout_marginLeft="8dp"
                android:id="@+id/gv_goods_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></cn.speedpay.s.xedj.view.GridViewForScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品价格:   "
                    android:textColor="@color/c_404040" />

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c_404040" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营销减免 :  "
                    android:textColor="@color/c_404040" />

                <TextView
                    android:id="@+id/tv_cut_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c_404040" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券&amp;其他 :   "
                    android:textColor="@color/c_404040" />

                <TextView
                    android:id="@+id/tv_voucher"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c_404040" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实际支付价格 :  "
                    android:textColor="@color/c_404040" />

                <TextView
                    android:id="@+id/tv_pay_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_404040" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/horizontal_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="其他信息 :"
                android:textColor="@color/c_000000"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单备注:   "
                    android:textColor="@color/c_404040" />

                <TextView
                    android:id="@+id/tv_order_remark"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textColor="@color/c_404040" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票 :  "
                    android:textColor="@color/c_404040" />

                <TextView
                    android:id="@+id/tv_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textColor="@color/c_404040" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/horizontal_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_refund"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_range_small_reset"
                    android:gravity="center"
                    android:text="退款" />
                <TextView
                    android:id="@+id/tv_print_ticket"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_alignTop="@+id/tv_refund"
                    android:layout_marginLeft="60dp"
                    android:layout_toEndOf="@+id/tv_refund"
                    android:layout_toRightOf="@+id/tv_refund"
                    android:background="@drawable/rounded_range_small_confirm"
                    android:gravity="center"
                    android:text="打印小票"
                    android:textColor="@color/c_ffffff" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>